{
    // General
    "editor.suggestSelection": "first",
    // "terminal.integrated.fontFamily": "Cascadia Mono PL, CaskaydiaCove Nerd Font Mono",
    "terminal.integrated.fontSize": 14,
    "editor.fontFamily": "Cascadia Code PL Light, CaskaydiaCove Nerd Font Mono, Fira Code Light, Consolas, 'Courier New', monospace",
    "editor.inlineSuggest.enabled": true,
    "editor.renderControlCharacters": true,
    "editor.fontSize": 15,
    "editor.wordWrap": "on",
    "editor.renderWhitespace": "selection",
    "editor.linkedEditing": true,
    "editor.rulers": [
        79,
        118
    ],
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs":"active",
    "files.insertFinalNewline": true,
    "git.autofetch": true,
    "security.workspace.trust.untrustedFiles": "open",
    "files.associations": {
        "Makefile": "makefile"
    },
    // Language Specific
    // C# Specific
    "[c#]": {
        "editor.codeActionsOnSave": {
            "source.fixAll.csharp": true
        },
    },
    // Yaml
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[python]": {
        "editor.formatOnType": true
    },
    "[shellscript]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    // Html
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    // Exntensions
    // Golang
    "go.useLanguageServer": true,
    "go.toolsManagement.autoUpdate": true,
    // Python
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    // Java
    "redhat.telemetry.enabled": true,
    "omnisharp.enableRoslynAnalyzers": true,
    "omnisharp.enableEditorConfigSupport": true,
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOsverrodeDefaultValue",
    // Indent Rainbow
    "indentRainbow.updateDelay": 500, // lower number will cost more resources
    // To-do Tree config
    "todo-tree.tree.showCountsInTree": false,
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "XXX",
        "[ ]",
        "[x]"
    ],
    "cSpell.diagnosticLevel": "Hint",
    "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
    "cmake.configureOnOpen": true,
}
