# 3rd Party Plugins
#Add plugins
plugins+=(
  sudo
  web-search
  copyfile
  copybuffer
  #dirhistory
  gitfast
  git-commit-mod
  git-escape-magic
  git
  # git-commit   # Using my own version of git-cmmit 
  git-extras
  copypath
  command-not-found
  extract
  history
  cp
  colored-man-pages
  colorize
  docker
  eza
  ssh-agent
  github
  # starship
  zoxide
  zsh-autosuggestions
  fast-syntax-highlighting
)
# eza config
zstyle ':omz:plugins:eza' 'dirs-first' yes
zstyle ':omz:plugins:eza' 'header' yes
zstyle ':omz:plugins:eza' 'git-status' yes
# omz auto update
zstyle ':omz:update' mode auto
# zsh-completion setup
# fpath+=${ZSH_CUSTOM:-${ZSH:-~/.oh-my-zsh}/custom}/plugins/zsh-completions/src
# Disable MAGIC-FUNCTIONS (like url-auto-encode, bracket paste magic etc)
DISABLE_MAGIC_FUNCTIONS=true
# ssh-agent config
zstyle :omz:plugins:ssh-agent lifetime 3h
zstyle :omz:plugins:ssh-agent agent-forwarding yes
zstyle :omz:plugins:ssh-agent identities $HOME/.ssh/{id_rsa,github-key-ms}
fpath+=${ZSH_CUSTOM:-${ZSH:-~/.oh-my-zsh}/custom}/plugins/zsh-completions/src
autoload -U compinit && compinit
